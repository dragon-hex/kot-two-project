{
    // this is a example of a simple city
    // the city files are stored in json, a simple configuration
    // file language, on the city, you can write actions, commands, etc.
    "properties": {
        // set the city name and it description
        "name"                  : "Axis City",
        "generic_name"          : "axis_city",
        "description"           : "The initial city.",
        // set the map size here, the map in tiles.
        "map_size"              : [10, 10],
        // the size of texture
        "floor_tile_texture_res": 64,
        // set the texture for the floor tiles.
        "floor_tile_texture"    : {"type":"sprite","name":"axc_grass0","res":64}
    }
}